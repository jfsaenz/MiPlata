<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/btn_logout"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar sesión"
        android:textColor="@color/white"
        app:backgroundTint="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/btn_delete_account"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Eliminar cuenta"
        android:textColor="@color/white"
        app:backgroundTint="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/btn_profile_settings"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Configurar perfil"
        android:textColor="@color/white"
        app:backgroundTint="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/btn_notification_permission"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Permiso de Notificaciones"
        android:textColor="@color/white"
        app:backgroundTint="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/btn_simulate_notification"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Simular Notificación (Prueba)"
        android:textColor="@color/white"
        app:backgroundTint="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/btn_edit_interests"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Modificar Gustos"
        android:textColor="@color/white"
        app:backgroundTint="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/btn_manage_categories"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Gestionar Categorías"
        android:textColor="@color/white"
        app:backgroundTint="@color/colorPrimaryDark" />

</LinearLayout>
